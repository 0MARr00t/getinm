{
  "manifest_version": 3,
  "name": "getinm",
  "version": "1.0",
  "description": "A simple Chrome/Edge browser extension that lets you quickly filter LinkedIn job postings that were posted in just 1 to 60 minutes.",
  "homepage_url": "https://github.com/0MARr00t/getinm",
  "author": "0MARr00t",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://www.linkedin.com/jobs/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Get LinkedIn Jobs in Minutes"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "",
      "strict_min_version": "109.0"
    }
  }
}
